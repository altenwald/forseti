{erl_opts, [
    debug_info,
    warnings_as_errors,
    {platform_define, "17|18", 'NEW_DICT_TYPE'}
]}.

{deps, [
    {rebar_vsn_plugin, ".*", {git, "https://github.com/erlware/rebar_vsn_plugin.git", master}},
    {gen_leader, ".*", {git, "https://github.com/garret-smith/gen_leader_revival.git", master}},
    {locks, ".*", {git, "https://github.com/altenwald/locks.git", master}},

    %% documentation
    {edown, ".*", {git, "https://github.com/uwiger/edown", master}},

    %% coveralls
    {coveralls, ".*", {git, "git://github.com/markusn/coveralls-erl.git", master}}
]}.

{eunit_opts, [verbose, {report,{eunit_surefire,[{dir,"."}]}}]}.

{plugins, [rebar_vsn_plugin]}.
{plugin_dir, ["deps/rebar_vsn_plugin/src", "deps/coveralls/src"]}.

{cover_enabled          , true}.
{cover_print_enabled    , true}.
{cover_export_enabled   , true}.
{coveralls_coverdata    , ".eunit/eunit.coverdata"}.
{coveralls_service_name , "travis-ci"}.

{edoc_opts,[
	{doclet, edown_doclet},
	{edown_target, github},
	{top_level_readme, {"./README.md", "http://github.com/altenwald/forseti"}}
]}.

{pre_hooks, [
    {eunit, "test/bootstrap"}
]}.

